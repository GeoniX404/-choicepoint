<%= simple_form_for([ choice_point, option ], html: {data:{options_target:"form"}}, remote: true, authenticity_token: true) do |f| %>
  <div class="option-description-container">
    <%= f.input :description,
                label: "Option:",
                placeholder: (
                  is_first_option ? "University of California, Berkeley" : ""
                ),
                class: "form-field",
                required: true,
                as: :string %>
    <%= f.input :pros,
                label: 'Pros:',
                class: "form-field",
                as: :text %>
    <%= f.input :cons,
                label: 'Cons:',
                class: "form-field",
                as: :text %>
  </div>
  <div class="option-btn-container">
    <%= f.button :submit, "Add", class: "btn-info" %>
    <div class="btn btn-main">
      <%= link_to "Submit", choice_point_path(@choice_point) %>
    </div>
  </div>
<% end %>
