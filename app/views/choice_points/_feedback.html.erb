<%# ChoicePoint.options.description for dropdown to pick chosen option %>
<h1>Feedback</h1>
<%= simple_form_for [ @choice_point ] do |f| %>
  <div class="choicepoint-description-container">
    <%= f.input :successful, label: "Successful Option?", required: true %>
    <%= f.input :options, collection: @choice_point_options,
        label_method: :description, value_method: :id, required: true %>
    <%= f.button :submit, class: "btn-info" %>
  </div>
<% end %>
