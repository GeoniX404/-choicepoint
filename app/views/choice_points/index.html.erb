<div class="index_main_text">
    <div class="large_index_image">
      <h2 class="secondary-title">Canâ€™t decide? Ask us.</h2>
      <p><%= link_to "Get Your Solution", new_choice_point_path, class: "btn-large btn-info btn" %></p>
       <!-- <h2 class="trending-text">TRENDING</h2> -->
    </div>
  </div>

<div class="page-container choice-points-index-container" data-controller="search">
  <div class="choicepoint">
    <div class="card-container">

      <div class="search-bar mb-4 container-left">
        <%= form_tag choice_points_path, method: :get, class: "search-wrapper", data: { search_target: 'form' } do %>
          <%= text_field_tag :query,
            params[:query],
            class: "form-control inner-search-bar",
            placeholder: "Search ChoicePoint",
            value: params[:query],
            data: { search_target: 'input', action: 'keyup->search#update' }%>
          <%= button_tag raw("<i class='fas fa-search'></i>"), class: "search-button" %>
        <% end %>
      </div>
      <%= render 'list', choice_points: @choice_points %>
    </div>

    <div class="ranking-container">
      <div class="trending mb-4 container-right general-card"><%= render "shared/last_chance_card",last_chance: @last_chance%></div>
      <div class="trending mb-4 container-right" id="what-is-backdrop"><%= render "shared/info_card"%></div>
      <%# <div class="memo"><p>memo placeholder</p></div> %>
      <div class="index-bottom-links">
        <p><%= link_to "My ChoicePoints", my_choice_points_path, class: "btn-ghost btn-bolder" %></p>
        <p><%= link_to "New ChoicePoint", new_choice_point_path, class: "btn-ghost btn-bolder btn-filled" %></p>
      </div>
      <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
      <lottie-player src="https://assets10.lottiefiles.com/packages/lf20_2jkhmznx.json"  background="transparent"  speed="1"  style="width: 300px; height: 300px;"  loop  autoplay></lottie-player>
    </div>

  </div>
</div>
